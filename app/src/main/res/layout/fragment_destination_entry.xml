<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7E0F6"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Add New Destination"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_selected_datetime"
                android:text="Selected: 18 August 2025 at 10:30 AM"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Destination Name -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Destination Name *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_destination_name"
                android:hint="Enter destination name"
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Category and Country -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <!-- Category -->
            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_marginEnd="6dp">

                <TextView
                    android:text="Category *"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_category"
                    android:hint="e.g., Beach, Mountain"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@drawable/bg_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <!-- Country -->
            <LinearLayout
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="16dp"
                android:layout_marginStart="6dp">

                <TextView
                    android:text="Country *"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/et_country"
                    android:hint="e.g., Sri Lanka"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:background="@drawable/bg_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Description *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_description"
                android:hint="Describe the destination..."
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <!-- Things to Do -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Things to Do"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_things_to_do"
                android:hint="List activities and attractions..."
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <!-- Accommodation -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Accommodation"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_accommodation"
                android:hint="Hotels, resorts, guesthouses..."
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="top"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <!-- Where to Eat -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:text="Where to Eat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_where_to_eat"
                android:hint="Restaurants, cafes, local food..."
                android:textSize="16sp"
                android:padding="12dp"
                android:background="@drawable/bg_edit_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="top"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <!-- Images Section -->
        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:text="Images"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <TextView
                android:text="Add images by selecting from gallery or taking photos"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_add_images"
                android:text="Add Images"
                android:background="@drawable/circle_background"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:text="Submit Destination"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btn_cancel"
                android:text="Cancel"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
