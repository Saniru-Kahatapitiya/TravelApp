<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.TravelApp">

        <!-- SplashActivity is launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- SignupActivity -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" /> <!-- Main/Home Activity (after login/signup) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- Forgot Password (Enter Email) -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false" /> <!-- Verification Code (Enter Code) -->
        <activity
            android:name=".VerificationActivity"
            android:exported="false" /> <!-- Reset Password (New Password) -->
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false" /> <!-- Social Signups -->
        <activity
            android:name=".GoogleSignupActivity"
            android:exported="false" />
        <activity
            android:name=".AppleSignupActivity"
            android:exported="false" />
        <activity
            android:name=".OnboardingActivity"
            android:exported="false" />



    </application>

</manifest>
