<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btn_back"
                android:src="@android:drawable/ic_menu_revert"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/teal_700"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:text="Trip Details"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_edit"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                app:tint="@color/teal_700"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/btn_delete"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:tint="@color/design_default_color_error"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Trip Cover Image -->
        <ImageView
            android:id="@+id/iv_trip_cover"
            android:src="@drawable/ninearch"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner"
            android:layout_marginBottom="16dp" />

        <!-- Trip Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_trip_name"
                    android:text="Batch Trip"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        app:tint="@color/teal_700" />

                    <TextView
                        android:id="@+id/tv_trip_dates"
                        android:text="14 Aug 2025 - 16 Aug 2025"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_trip_status"
                    android:text="Ongoing"
                    android:textSize="14sp"
                    android:textColor="@color/teal_700"
                    android:background="@drawable/status_background"
                    android:padding="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Days Container -->
        <LinearLayout
            android:id="@+id/ll_days_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Day 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:text="Day 01 / 14 Aug 2025"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp" />

                    <!-- Attractions List -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Attraction 1 -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:padding="8dp"
                            android:background="@drawable/input_background">

                            <ImageView
                                android:src="@drawable/ninearch"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Nine Arch Bridge"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:text="Ella â€¢ 09:00 AM"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <ImageView
                                android:src="@android:drawable/ic_menu_info_details"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:tint="@color/teal_700" />

                        </LinearLayout>

                        <!-- Attraction 2 -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:padding="8dp"
                            android:background="@drawable/input_background">

                            <ImageView
                                android:src="@drawable/flying_ravana"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Flying Ravana"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:text="Ella â€¢ 02:00 PM"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <ImageView
                                android:src="@android:drawable/ic_menu_info_details"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:tint="@color/teal_700" />

                        </LinearLayout>

                        <!-- Attraction 3 -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:background="@drawable/input_background">

                            <ImageView
                                android:src="@drawable/ella_rock"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:layout_marginEnd="12dp" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:text="Ella Rock"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:text="Ella â€¢ 05:00 PM"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/darker_gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <ImageView
                                android:src="@android:drawable/ic_menu_info_details"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:tint="@color/teal_700" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
